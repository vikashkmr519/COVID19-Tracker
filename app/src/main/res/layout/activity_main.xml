<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/mydetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:id="@+id/developedby"
                android:text="Developed By"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp">

            </TextView>
            <TextView
                android:textAlignment="viewStart"
                android:text="https://github.com/vikashkmr519"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="30dp">

            </TextView>


        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/mydetail"
        android:id="@+id/topRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titleTv"
            android:textAllCaps="true"
            android:layout_margin="16dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India covid-19 \ntracker"
            />

        <TextView
            android:id="@+id/lastupdatedTv"
            android:textAllCaps="true"
            android:layout_margin="16dp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last updated"
            android:textAlignment="viewEnd"
            android:layout_alignParentEnd="true"
            />


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/conatiner"
        android:layout_below="@id/topRL"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_red"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Confirmed"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/ic_virus"
                android:tint="@color/dark_red"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>

            <TextView
                android:id="@+id/ConfirmedTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/dark_red"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Active"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/ic_patient"
                android:tint="@color/dark_blue"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>

            <TextView
                android:id="@+id/activeTv"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Recovered"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/ic_heart"
                android:tint="@color/dark_green"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>

            <TextView
                android:id="@+id/recoveredTv"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Deceased"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/ic_death"
                android:tint="@color/dark_yellow"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>

            <TextView
                android:id="@+id/deceasedTv"
                android:textColor="@color/dark_yellow"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_margin="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/conatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>



</RelativeLayout>